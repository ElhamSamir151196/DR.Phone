<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#ffffff"
        android:padding="15dp">

        <ImageView
            android:id="@+id/image_id_comment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/circle"
            android:layout_alignParentLeft="true"
            android:layout_alignBaseline="@+id/text_name_comment"

            />
        <TextView
            android:id="@+id/text_name_comment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/image_id_comment"
            android:textColor="#333"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_date_comment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/image_id_comment"
            android:layout_below="@+id/text_name_comment"
            android:textColor="#333"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/text_describtion_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_id_comment"
            android:textColor="#333"
            android:paddingLeft="5dp"/>

       <Button
            android:id="@+id/btn_accept_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_describtion_comment"
            android:textColor="#333"
            android:paddingLeft="5dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
