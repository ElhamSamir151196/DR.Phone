<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/image_id"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/circle"
            android:layout_alignParentLeft="true"
            android:layout_alignBaseline="@+id/text_date_name"

            />
        <TextView
            android:id="@+id/text_date_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/image_id"
            android:textColor="#333"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/text_date_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_id"
            android:layout_below="@id/text_date_name"
            android:textColor="#333"
            android:textStyle="bold"/>





        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_id"
            android:textColor="#333"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/text_describtion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_title"
            android:textColor="#333"
            android:paddingLeft="5dp"/>

        <ImageView
            android:id="@+id/image_view_upload"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/text_describtion"
            />

        <Button
            android:id="@+id/btn_add_coment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_view_upload"
            android:text="Add Comment"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btn_add_coment"/>

    </LinearLayout>

</android.support.v7.widget.CardView>