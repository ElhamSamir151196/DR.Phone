<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images_1"
    tools:context=".Client_View_ProfileActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:id="@+id/admin_change_name_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignBaseline="@+id/admin_show_name_edit1"
                android:text="Name : "
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"

                />
            <TextView
                android:id="@+id/admin_show_name_edit1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/admin_show_name_view"
                android:layout_alignParentTop="true"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/admin_change_admin_name_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignBaseline="@+id/admin_show_admin_name_edit1"
                android:text="Password  : "
                android:layout_below="@+id/admin_change_name_view"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"

                />
            <TextView
                android:id="@+id/admin_show_admin_name_edit1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/admin_change_admin_name_view"
                android:layout_below="@+id/admin_show_name_edit1"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"

                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/admin_change_password_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignBaseline="@+id/admin_show_password_edit1"
                android:text="Address  : "
                android:layout_below="@+id/admin_change_admin_name_view"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />
            <TextView
                android:id="@+id/admin_show_password_edit1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/admin_change_password_view"
                android:layout_below="@+id/admin_show_admin_name_edit1"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"

                />
        </TableRow>
        <TableRow>

            <TextView
                android:id="@+id/admin_change_e_mail_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignBaseline="@+id/admin_show_e_mail_edit1"
                android:text="E-mail  : "
                android:layout_below="@+id/admin_change_password_view"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"

                />
            <TextView
                android:id="@+id/admin_show_e_mail_edit1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/admin_change_e_mail_view"
                android:layout_below="@+id/admin_show_password_edit1"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/admin_change_describtion1_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignBaseline="@+id/admin_show_describtion1_edit1"
                android:text="Mobile Number  : "
                android:layout_below="@+id/admin_change_e_mail_view"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"

                />
            <TextView
                android:id="@+id/admin_show_describtion1_edit1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/admin_change_describtion1_view"
                android:layout_below="@+id/admin_change_e_mail_edit1"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"

                />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/admin_change_show_btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/admin_show_describtion1_edit1"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/buttons"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:text="OK"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"

                />

        </TableRow>
    </TableLayout>
    <TextView
        android:id="@+id/copy_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cop_right"
        android:textSize="12sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        android:layout_alignParentBottom="true"/>







</RelativeLayout>